<configuration>

    <!--修改hbase的临时目录路径-->
    <property >
		<name>hbase.tmp.dir</name>
		<value>/opt/app/hbase-0.98.6-hadoop2/data/tmp</value>
	</property>
	
	<!--修改hbase的存储数据的目录-->
	<property >
		<name>hbase.rootdir</name>
		<value>hdfs://master:8020/hbase</value>
	</property>
	
	<!--修改自定义hbase的分布式集群模式-->
	<property >
		<name>hbase.cluster.distributed</name>
		<value>true</value>
	</property>
	
	<!--修改自定义hbase的ZK地址-->
	<property>
		<name>hbase.zookeeper.quorum</name>
		<value>master</value>
	</property>
</configuration>
